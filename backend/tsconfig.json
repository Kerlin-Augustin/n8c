{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "allowImportingTsExtensions": true,
    "moduleResolution": "node", 
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": false,  
    "outDir": "./dist",  
    "baseUrl": "./",  
    "resolveJsonModule": true
  },
  "include": ["./**/*.ts"], 
  "exclude": ["node_modules"]
}
